<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.ui.main.HostoDevPageFragment">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom|center_horizontal"
            android:tint="@color/primary500"
            android:layout_margin="20dp"
            android:alpha=".50"
            android:src="@drawable/ic_devpage_coffee3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:tint="@color/primary500"
                    android:src="@drawable/ic_quotes_devpage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=" Hosto brewers"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:tint="@color/primary500"
                    android:rotation="180"
                    android:src="@drawable/ic_quotes_devpage" />
            </LinearLayout>

            <include
                android:id="@+id/devpage_profile_srinivas"
                layout="@layout/fragment_hosto_devpage_profile1" />

            <include
                android:id="@+id/devpage_profile_vinay"
                layout="@layout/fragment_hosto_devpage_profile2" />

            <include
                android:id="@+id/devpage_profile_suhaas"
                layout="@layout/fragment_hosto_devpage_profile3" />

        </LinearLayout>
    </FrameLayout>
</layout>