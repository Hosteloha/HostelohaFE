<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView style="@style/scrollViewBasedCardDesign">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginStart="-5dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_account_circle_dt"
                            android:tint="@color/colorPrimary" />

                        <LinearLayout
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/profile_image"
                            android:layout_alignBottom="@+id/profile_image"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/profile_image"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/item_number"
                                style="@style/modifiedEditText"
                                android:singleLine="true"
                                android:text="Tony Stark"
                                android:textAllCaps="true"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/content"
                                style="@style/modifiedEditText"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="iron-man"
                                android:textAllCaps="false"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editAccountDetails"
                            style="@style/customMaterialButton_TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_below="@+id/seller_ratings"
                            android:layout_gravity="end|top"
                            android:text="Follow Back"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            app:cornerRadius="10dp"
                            app:icon="@drawable/ic_add_black" />

                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
</layout>